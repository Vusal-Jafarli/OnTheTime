<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.AddLocationFragment">


    <Button
        android:id="@+id/cancel_button_locations"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/close_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:paddingTop="40dp"
        android:text="Add Employee"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/mainColor"/>


    <TextView
        android:id="@+id/save_textView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@color/mainColor"
        android:gravity="center"
        android:paddingTop="40dp"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Button
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/mainColor"
        android:drawableLeft="@drawable/person_icon"
        android:drawablePadding="10dp"
        android:hint="Name"
        android:paddingBottom="14dp"
        android:textColorHint="@color/mainColor" />


    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/mainColor"
        android:drawableLeft="@drawable/person_icon"
        android:drawablePadding="10dp"
        android:hint="Surname"
        android:paddingBottom="14dp"
        android:textColorHint="@color/mainColor"

        />

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/mainColor"
        android:drawableLeft="@drawable/login_email_icon"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:paddingBottom="14dp"
        android:textColorHint="@color/mainColor" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/mainColor"
        android:drawableLeft="@drawable/login_lock_icon"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:paddingBottom="14dp"
        android:textColorHint="@color/mainColor" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/mainColor"
        android:drawableLeft="@drawable/login_lock_icon"
        android:drawablePadding="10dp"
        android:hint="Confirm Password"

        android:paddingBottom="14dp"
        android:textColorHint="@color/mainColor" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:background="@drawable/rounded_colorful_button"
        android:text="Add Employee"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />


</LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>