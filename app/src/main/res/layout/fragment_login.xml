<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.LoginFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="LOGIN"
        android:textColor="@color/mainColor"
        android:textSize="30dp"
        android:layout_marginTop="50dp"/>


    <EditText
        android:id="@+id/email_edittext"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/login_email_icon"
        android:drawablePadding="10dp"
        android:paddingBottom="14dp"
        android:hint="Email"
        android:textColorHint="@color/mainColor"
        android:backgroundTint="@color/mainColor"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/password_edittext"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/login_lock_icon"
        android:drawablePadding="10dp"
        android:paddingBottom="14dp"
        android:hint="Password"
        android:textColorHint="@color/mainColor"
        android:backgroundTint="@color/mainColor"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:inputType="textPassword"
        />
    <TextView
        android:id="@+id/no_account_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No account found with this email address.Please check your email or sign up for a new account."
        android:textColor="#88031E"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="35dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/wrong_password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incorrect password. Please try again or reset your password."
        android:textColor="#88031E"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="35dp"
        android:visibility="gone"
        />


    <Button
        android:id="@+id/login_button_main"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="45dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_colorful_button"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/sign_up_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="@color/mainColor"
            />
    </LinearLayout>
